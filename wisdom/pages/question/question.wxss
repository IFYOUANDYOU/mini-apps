/* pages/question/question.wxss */
.container{background: #2b95ff;line-height: 88rpx;padding: 0 35rpx;color: #fff;position: fixed;bottom: 35rpx;left: 35rpx;right: 35rpx;top: 0;height: auto;} 
.logo image{width: 220rpx;height: 90rpx;}
.time{overflow: hidden;font-size: 36rpx;font-weight: bold;margin-bottom: 12rpx;}
.question .stem{font-size: 48rpx;font-weight: bold;line-height: 68rpx;}
.question .options{background: #fff;padding: 30rpx;overflow: hidden;margin-top: 45rpx;}
.question .option{margin: 30rpx 0;padding: 0 25rpx;overflow: hidden;background-color: #e8e8e8;color: #333;position: relative;}
.question .option::after{content: '';display: block;width: 28rpx;height: 28rpx;background-repeat: no-repeat;background-size: 28rpx auto;position: absolute;top: 28rpx;right: 30rpx;}
.question .option.error{background-color: #fe4241;color: #fff;}
.question .option.error::after{background-image: url(data:image/png;base64,);}
.question .option.success{background-color: #2b95ff;color: #fff;}
.question .option.success::after{background-image: url(data:image/png;base64,);}
.question .judge{width: 28rpx;height: 28rpx;}
.next{position: absolute;bottom: 64rpx;left: 0;right: 0;}
.next .btn{background: #fff;font-size: 34rpx;line-height: 78rpx;width: 360rpx;margin: 0 auto;color: #333;height: 78rpx;}
