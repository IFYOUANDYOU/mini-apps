/* 头部开始答题 */
page{height: 100%;}
.container{background: #d5eaff;height: 100%;margin: 0 35rpx;}
.container::after{height: 35rpx;background: #fff;content: '';width: 100%;position: absolute;bottom: 0;left: 0;}
.header{position: relative;height: 805rpx;}
.container .qus,.header .logo,.header .start{position: absolute;}
.container .qus{width: 750rpx;height: 805rpx;left: 0;}
.header .logo{top: 0;left: 80rpx;}
.header .logo image{width: 220rpx;height: 90rpx;}
.header .start{background: #fe4241;width: 65%;bottom: 90rpx;left: 17.5%;box-shadow: 0 12rpx 10rpx #477aae;margin: 15rpx 0;}
/* 规则介绍 */
.rules{background: #d5eaff;padding: 30rpx 35rpx 20rpx;z-index: 0;font-size: 28rpx;position: absolute;bottom: 35rpx;left: 35rpx;right: 35rpx;}
.rules .title{margin-top: 52px;text-align: center;font-size: 32rpx;background: url(data:image/png;base64,) no-repeat center center;background-size: auto 16rpx;margin-bottom: 32rpx;}
.rules .rule{margin: 22rpx 0;}
.rules .num{display: block;border: 1rpx solid #333;width: 26rpx;height: 26rpx;text-align: center;line-height: 26rpx;float: left;margin-right: 8rpx;}
.rules .text{display: block;line-height: 30rpx;}