/* pages/message/message.wxss */
.bg{position: absolute;top: 0;left: 0;width: 750rpx;height: 590rpx;}
.message-main{overflow: hidden;position: relative;margin: 0 34rpx;}
.name{background-color: rgba(0, 0, 0, 0.1);color: #fff;width: 480rpx;height: 100rpx;line-height: 100rpx;text-align: center;margin: 40rpx auto;}
.info{position: relative;padding: 0 30rpx;color: #666;font-size: 30rpx;background: #fff;}
.sex-group,.sex{position: absolute;top: 20rpx;right: 0;line-height: 60rpx;overflow: hidden;z-index: 1;}
.sex{display: block;width: 110rpx;text-align: center;}
.radio{width: 110rpx;text-align: center;position: relative;display: block;float: left;background-color: #e9f0ee;color: #999;}
.radio.active,.sex{background-color: #07b6a5;color: #fff;}
.radio radio{position: absolute;width: 100%;left: 0;top: 0;content: "";}
.info .item{padding: 20rpx 0;line-height: 60rpx;border-bottom: 2rpx dotted #e1e1e1;position: relative;}
.info .item .item_input{min-height: 60rpx;margin-left: 140rpx;}
.info .item input{height: 60rpx;line-height: 60rpx;}
.info .item .item_tag{position: absolute;top: 20rpx;right: 0;}
.info .item .item_tag image{top: 4rpx;position: relative;}
.item .boundary{padding: 0 24rpx;}
.info .item_no{position: absolute;top: 20rpx;right: 0;width: 220rpx;overflow: hidden;background: #f0f0f0;}
.info .item_no text{display: block;width: 80rpx;text-align: center;}
.info .item_no .no{width: 140rpx;}
.message-main .btm-btn{margin: 36rpx 0;}
.message{border-top: 20rpx solid #e9f0ef;text-align: center;padding: 0 24rpx 24rpx;color: #666;line-height: 44rpx;overflow: hidden;}
.message .h1{position: relative;width: 510rpx;margin: 24rpx auto 14rpx;font-size: 30rpx;color: #333;}
.message .h1::before,.message .h1::after{display: block;content: '';height: 2rpx;width: 100rpx;background: #333;position: absolute;top: 50%;margin-top: -1rpx;left: 0;}
.message .h1::after{right: 0;left: auto;}

.pickerView{position: fixed;bottom: 0;left: 0;width: 100%;z-index: 9;text-align: center;}
.pickerView .bj{position: fixed;top: 0;left: 0;background: rgba(0, 0, 0, 0.4);width: 100%;height: 100%;z-index: -1;}
picker-view-column{background: #fff;}
.pickerView .btns{line-height: 80rpx;overflow: hidden;border-bottom: 2rpx solid #f0f0f0;padding: 0 24rpx;background: #fff;}
.pickerView .btns text{display: block;}
.pickerView .btns .confirm{color: #07b6a5;}

.no,.input-placeholder{font-size: 26rpx;color: #999;}