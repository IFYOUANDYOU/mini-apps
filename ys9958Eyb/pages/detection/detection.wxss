/* pages/detection/detection.wxss */

.detection-form .prompt{margin: 40rpx;}
.detection-form .prompt view{font-size: 48rpx;}
.detection-form .prompt text{font-size: 28rpx;color: #c1c1c1;}
/*表单信息填写*/
.form-msg{display: block;margin: 0 40rpx;}
.form-item{margin: 32rpx 0;background-color: #f3f3f3;position: relative;}
.form-item .form-text{position: absolute;top: 0;right: 30rpx;font-size: 30rpx;color: #c1c1c1;line-height: 88rpx;}
.form-item .form-input input{height: 88rpx;font-size: 30rpx;padding-left: 28rpx;}
/*性别选择*/
.sex-select .form-text{width: 100%;height: 88rpx;left: 0;right: 0;z-index: 9;}
.form-btn{position: fixed;bottom: 40rpx;left: 0;right: 0;}
.form-btn button{height: 88rpx;background: transparent;padding: 0;border-radius: 0;}
.form-btn button::after{border: none;}
.form-btn image{height: 88rpx;width: 668rpx;}