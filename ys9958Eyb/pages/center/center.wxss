/* pages/center/center.wxss */

/*用户基本信息*/
.content-portrait{margin: 0 40rpx;padding: 40rpx 0;display: flex;align-items: center;justify-content: space-between;border-bottom: 2rpx dotted #e2e2e2;}
.content-portrait .info{line-height: 58rpx;}
.content-portrait .name{font-size: 48rpx;margin: 0 0 24rpx;}
.content-portrait .next,.content-portrait .endTime{color: #999;}
.content-portrait .img,.content-portrait .img image{width: 148rpx;height: 148rpx;border-radius: 74rpx;overflow: hidden;}
/*个人中心功能菜单*/
.center-menus{padding: 15rpx 40rpx;}
.center-menus .menu{line-height: 60rpx;margin: 35rpx 0;position: relative;}
.center-menus .icon{width: 40rpx;height: 40rpx;margin: 10rpx 20rpx 0 0;}
.center-menus .right,.center-menus .arrow{display: block;position: absolute;top: 6rpx;right: 0;}
.center-menus .arrow{width: 17rpx;height: 28rpx;}
.center-menus .right{line-height: 28rpx;font-size: 42rpx;color: #999;font-weight: bold;margin-right: 36rpx;}
.feedback{position: fixed;bottom: 0;left: 0;right: 0;line-height: 88rpx;text-align: center;}