/* pages/order/order.wxss */
page{background-color: #f2f2f2;}

.content-order{padding: 0 24rpx;}
.order-item{background-color: #fff;border-radius: 12rpx;margin: 20rpx 0;line-height: 68rpx;padding: 10rpx 0 0;}
.order-item .view{overflow: hidden;padding: 5rpx 30rpx;}
.order-item .item::after{display: block;content: '';height: 2rpx;width: 100%;background-color: #f3f3f3;margin-top: 10rpx;}
.order-item .title,.order-item .more{color: #ff595f;}
.order-item .title{font-size: 32rpx;}
/* .order-item .title::after{content: '>';color: #999;font-size: 32rpx;margin-left: 8rpx;} */
.order-item .time,.order-item .dt{color: #999;}
.order-item .detail{width: 162rpx;height: 48rpx;color: #fff;margin: 10rpx 0 0;border-radius: 60rpx;line-height: 48rpx;font-size: 28rpx;text-align: center;}