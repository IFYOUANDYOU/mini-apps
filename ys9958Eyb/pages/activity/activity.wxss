/* pages/activity/activity.wxss */
page{background-color: #fef4eb;}
/*顶部广告图*/
.index-ad .ad{height: 465rpx;}
/*专家团队介绍*/
.experts-text{border: 10rpx solid #fff;margin: 0 24rpx;color: #999;line-height: 42rpx;padding: 10rpx 18rpx;border-radius: 14rpx;position: relative;top: -40rpx;}
/*专家团队*/
.experts-list .title{text-align: center;margin-bottom: 32rpx;}
.experts-list .title image{width: 404rpx;height: 75rpx;}
.experts-item{display: flex;align-items: center;background-color: #fff;margin: 20rpx 24rpx;padding: 20rpx;border-bottom: 10rpx solid rgba(0, 0, 0, 0.1);}
.experts-item  img{width: 148rpx;height: 148rpx;background-color: #f2f2f2;}
.experts-item .portrait{width: 148rpx;height: 148rpx;border-radius: 74rpx;}
.experts-item .info{line-height: 36rpx;margin-left: 20rpx;font-size: 26rpx;}
.experts-item .name{font-size: 30rpx;margin-bottom: 12rpx;}
.experts-item .name text{font-size: 26rpx;color: #666;}
.experts-item .inaugurat,.experts-item .goodat{color: #999;}
.experts-item .goodat text{display: block;color: #666;}